<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>dev.mariinkys.StarryDex</id>
    <developer id="dev.mariinkys">
        <name>mariinkys</name>
    </developer>
    <url type="homepage">https://github.com/mariinkys/starrydex</url>
    <url type="bugtracker">https://github.com/mariinkys/starrydex/issues</url>
    <url type="donation">https://buymeacoffee.com/mariinkys</url>

    <name>StarryDex</name>
    <summary>A simple Pokédex Application for the COSMIC™ desktop</summary>

    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-only</project_license>

    <description>
      <p>
        Embark on your Pokémon journey with StarryDex, a simple Pokédex application.
      </p>
      <ul>
        <li>Simple Pokédex, access information on all Pokémon species, including stats...</li>
        <li>Easily find Pokémon by name.</li>
        <li>Works offline after initial setup is completed.</li>
      </ul>
    </description>

    <icon type="remote" height="256" width="256">https://raw.githubusercontent.com/mariinkys/starrydex/main/res/icons/hicolor/256x256/apps/dev.mariinkys.StarryDex.svg</icon>
    <launchable type="desktop-id">dev.mariinkys.StarryDex.desktop</launchable>
    <content_rating type="oars-1.1"/>

    <provides>
        <id>com.system76.CosmicApplication</id>
        <binary>starry-dex</binary>
    </provides>

    <screenshots>
        <screenshot type="default" xml:lang="en">
            <image>https://raw.githubusercontent.com/mariinkys/starrydex/main/screenshots/main.png</image>
            <caption>Pokémon List Page</caption>
        </screenshot>
        <screenshot xml:lang="en">
            <image>https://raw.githubusercontent.com/mariinkys/starrydex/main/screenshots/pokemon.png</image>
            <caption>Pokémon Details Page</caption>
        </screenshot>
    </screenshots>

    <branding>
      <color type="primary" scheme_preference="light">#FF0000</color>
      <color type="primary" scheme_preference="dark">#B30000</color>
    </branding>

    <categories>
        <category>Utility</category>
        <category>Game</category>
        <category>Education</category>
    </categories>

    <keywords>
        <keyword>Pokedex</keyword>
        <keyword>Pokemon</keyword>
        <keyword>Encyclopedia</keyword>
        <keyword>Pocket Monsters</keyword>
        <keyword>Game</keyword>
    </keywords>

    <releases>
        <release version="0.2.3" date="2025-02-01">
            <description>
                <p>Fixed bug with translations on type filters</p>
                <p>Fixed bug when updating the cache</p>
                <p>Updated dependencies</p>
            </description>
        </release>
        <release version="0.2.2" date="2024-12-21">
            <description>
                <p>New about page</p>
                <p>Updated dependencies</p>
            </description>
        </release>
        <release version="0.2.1" date="2024-10-13">
            <description>
                <p>Fixed an error that prevented Bulbasaur from being shown</p>
            </description>
        </release>
        <release version="0.2.0" date="2024-09-30">
            <description>
                <p>Complete code rewrite</p>
                <p>Implemented custom cache that improves performance and drastically reduces disk usage</p>
                <p>Basic Pokémon filtering implementation</p>
                <p>Now you can customize how many Pokémon are shown per each row</p>
            </description>
        </release>
        <release version="0.1.2" date="2024-09-28">
            <description>
                <p>Code cleanup and improvements</p>
                <p>Updated dependencies</p>
            </description>
        </release>
        <release version="0.1.1" date="2024-07-13">
            <description>
                <p>Fixed Flatpak theming when using Cosmic</p>
                <p>Fixed width on header options</p>
                <p>Added app version to about page</p>
                <p>Updated dependencies</p>
            </description>
        </release>
        <release version="0.1.0" date="2024-07-09">
            <description>
                <p>First Stable Release</p>
                <p>Search for Pokémon by Name</p>
                <p>Look at a specific Pokémon Types, Weight, Height, Stats, Abilities as well as Encounter Details for that Pokémon on each game.</p>
                <p>Ability to work offline after initial setup</p>
            </description>
        </release>
    </releases>
</component>
