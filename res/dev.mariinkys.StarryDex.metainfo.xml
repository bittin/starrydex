<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
    <id>dev.mariinkys.StarryDex</id>
    <developer id="dev.mariinkys">
        <name>mariinkys</name>
    </developer>
    <url type="homepage">https://github.com/mariinkys/starrydex</url>
    <url type="bugtracker">https://github.com/mariinkys/starrydex/issues</url>
    <url type="donation">https://buymeacoffee.com/mariinkys</url>

    <name>StarryDex</name>
    <summary>A simple Pokédex Application</summary>

    <metadata_license>CC0-1.0</metadata_license>
    <project_license>GPL-3.0-only</project_license>

    <description>
      <p>
        Embark on your Pokémon journey with StarryDex, a simple Pokédex application.
      </p>
      <ul>
        <li>Simple Pokédex, access information on all Pokémon species, including stats...</li>
        <li>Easily find Pokémon by name.</li>
        <li>Works offline after initial setup is completed.</li>
      </ul>
    </description>

    <launchable type="desktop-id">dev.mariinkys.StarryDex.desktop</launchable>
    <content_rating type="oars-1.1"/>

    <screenshots>
        <screenshot type="default" xml:lang="en">
            <image>https://raw.githubusercontent.com/mariinkys/starrydex/main/screenshots/main.png</image>
            <caption>Pokémon List Page</caption>
        </screenshot>
        <screenshot xml:lang="en">
            <image>https://raw.githubusercontent.com/mariinkys/starrydex/main/screenshots/pokemon.png</image>
            <caption>Pokémon Details Page</caption>
        </screenshot>
    </screenshots>

    <branding>
      <color type="primary" scheme_preference="light">#FF0000</color>
      <color type="primary" scheme_preference="dark">#B30000</color>
    </branding>

    <categories>
        <category>Utility</category>
        <category>Game</category>
        <category>Education</category>
    </categories>

    <keywords>
        <keyword>Pokedex</keyword>
        <keyword>Pokemon</keyword>
        <keyword>Encyclopedia</keyword>
        <keyword>Pocket Monsters</keyword>
        <keyword>Game</keyword>
    </keywords>

    <releases>
        <release version="0.1.0" date="2024-07-09">
            <description>
                <p>First Stable Release</p>
            </description>
        </release>
    </releases>
</component>